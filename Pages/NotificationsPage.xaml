<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StravigoAI.Services"
             x:Class="StravigoAI.Pages.NotificationsPage"
             Title="Notifications">

    <CollectionView x:Name="NotificationsCollection"
                    ItemsSource="{Binding Notifications}"
                    Margin="10"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Subject}" FontAttributes="Bold" FontSize="16"/>
                        <Label Text="{Binding Date, StringFormat='Date: {0:MMM dd, yyyy}'}"/>
                        <Label Text="{Binding Time, StringFormat='Time: {0:hh\\:mm}'}"/>
                        <Label Text="{Binding Duration, StringFormat='Duration: {0}'}"/>
                        <Label Text="{Binding Type, StringFormat='Type: {0}'}"/>
                        <Label Text="{Binding Notes}" FontAttributes="Italic" LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
