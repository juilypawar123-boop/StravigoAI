<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StravigoAI.Pages.WriteNotesPage"
             Title="Write Notes">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label 
                Text="Write New Notes"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Center" />

            <Entry x:Name="ProjectEntry" Placeholder="Project Name" />

            <Editor x:Name="NotesEditor" Placeholder="Meeting Notes" AutoSize="TextChanges" />

            <Button Text="Submit Notes"
                    TextColor="Black"
                    BackgroundColor="DodgerBlue"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" 
                    Clicked="OnSubmitClicked"/>
            
            <Label Text="Submitted Notes:" FontAttributes="Bold" FontSize="18" Margin="0,20,0,5"/>
            <CollectionView x:Name="NotesCollectionView" ItemsSource="{Binding NotesList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Project}" FontAttributes="Bold"/>
                                <Label Text="{Binding Notes}" LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>