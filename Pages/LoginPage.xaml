<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StravigoAI.Pages.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">
        <Entry x:Name="EmailEntry"
               Placeholder="Email"
               Keyboard="Email"
               HeightRequest="45"
               HorizontalOptions="FillAndExpand"/>

        <Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"
               HeightRequest="45"
               HorizontalOptions="FillAndExpand"
               Margin="0,20,0,10"
               Grid.Column="0"/>

        <ImageButton x:Name="TogglePasswordButton"
                 Grid.Column="1"
                 Source="eye_closed.png"
                 BackgroundColor="Transparent"
                 Clicked="OnTogglePasswordClicked"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 WidthRequest="28"
                 HeightRequest="28" />

        <Button Text="Login"
                Clicked="OnLoginClicked"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
                Margin="200,20,200,20"
                CornerRadius="20" />

        <Label Text="New to StravigoAI?"
               TextColor="White"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="300,20,300,20" />

        <Button Text="Create Account"
                TextColor="Black"
                Clicked="OnCreateAccountClicked"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Margin="100,10,100,10"/>

    </VerticalStackLayout> 

</ContentPage>
