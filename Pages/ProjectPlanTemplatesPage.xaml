<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StravigoAI.Pages.ProjectPlanTemplatesPage"
             Title="Project Plan Templates">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Project Plan Templates"
                   FontSize="22"
                   FontAttributes="Bold" />

            <!-- Template #1 -->
            <Frame BackgroundColor="#2A2A3F" Padding="15" CornerRadius="10">
            <VerticalStackLayout Spacing="10">
                    <Label Text="Corporate Project's Plan" TextColor="White"/>
                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                    <Button Text="Open" Clicked="OpenTemplate_Clicked"/>
                    <Button Text="Download" Clicked="DownloadTemplate_Clicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            </Frame>

            <!-- Template #2 -->
            <Frame BackgroundColor="#2A2A3F" Padding="15" CornerRadius="10">
             <VerticalStackLayout Spacing="10">
                <Label Text="B2B Project's Plan" TextColor="White" />
                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                    <Button Text="Open" Clicked="OpenTemplate_Clicked"/>
                    <Button Text="Download" Clicked="DownloadTemplate_Clicked"/>
                </HorizontalStackLayout>
             </VerticalStackLayout>
            </Frame>

            <!-- Template #3 -->
            <Frame BackgroundColor="#2A2A3F" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Media Project's Plan" TextColor="White" />
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Open" Clicked="OpenTemplate_Clicked"/>
                        <Button Text="Download" Clicked="DownloadTemplate_Clicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#2A2A3F" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Private Equity Project's Plan" TextColor="White" />
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Open" Clicked="OpenTemplate_Clicked"/>
                        <Button Text="Download" Clicked="DownloadTemplate_Clicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#2A2A3F" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Technical Project's Plan" TextColor="White" />
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Open" Clicked="OpenTemplate_Clicked"/>
                        <Button Text="Download" Clicked="DownloadTemplate_Clicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

