<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StravigoAI.Pages.MainDashboardPage"
             BackgroundColor="White"
             Title="Main Dashboard">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Menu -->
        <StackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                     BackgroundColor="#1E1E2D" Padding="15" Spacing="15">
            <Label Text="StravigoAI" FontSize="24" TextColor="White" HorizontalOptions="Center" />
            <Button Text="Dashboard" TextColor="White" BackgroundColor="#2A2A3F" Clicked="Dashboard_Clicked"/>
            <Button Text="Projects" TextColor="White" BackgroundColor="#2A2A3F" Clicked="Projects_Clicked"/>
            <Button Text="Billing &amp; Timesheets" TextColor="White" BackgroundColor="#2A2A3F" Clicked="BillingAndTimesheets_Clicked"/>
            <Button Text="Global AI Insights" TextColor="White" BackgroundColor="#2A2A3F" Clicked="GlobalAIInsights_Clicked"/>
            <Button Text="Templates Library" TextColor="White" BackgroundColor="#2A2A3F" Clicked="Templates_Clicked"/>
            <Button Text="Meeting Notes" TextColor="White" BackgroundColor="#2A2A3F" Clicked="MeetingNotes_Clicked"/>
            <Button Text="Client Portal" TextColor="White" BackgroundColor="#2A2A3F" Clicked="ClientPortal_Clicked"/>
            <Button Text="Notifications" TextColor="White" BackgroundColor="#2A2A3F" Clicked="Notifications_Clicked" />
            <Button Text="Meetings Calendar" TextColor="White" BackgroundColor="#2A2A3F" Clicked="MeetingsCalendar_Clicked" />
            <Button Text="Teams" TextColor="White" BackgroundColor="#2A2A3F" Clicked="Teams_Clicked" />
            <Button Text="Log Out" TextColor="White" BackgroundColor="#2A2A3F" Clicked="LogOut_Clicked" />

        </StackLayout>

        <!-- Header / Top Bar -->
        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal"
                     BackgroundColor="#2A2A3F" Padding="10"
                     HorizontalOptions="FillAndExpand" Spacing="20">
            <Label Text="Greetings, Strategic Partner!" TextColor="White" FontSize="20"
                   HorizontalOptions="StartAndExpand"/>
            <Button Text="Settings" Margin="0,0,20,0"/>

        </StackLayout>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- KPI Cards -->
                <HorizontalStackLayout Spacing="15" Margin="0,20,0,15">
                    <Frame BackgroundColor="#2A2A3F" WidthRequest="150" HeightRequest="100">
                        <Label Text="Active Projects: 12" TextColor="White" FontSize="16"/>
                    </Frame>
                    <Frame BackgroundColor="#2A2A3F" WidthRequest="150" HeightRequest="100">
                        <Label Text="Revenue: £120k" TextColor="White" FontSize="16"/>
                    </Frame>
                    <Frame BackgroundColor="#2A2A3F" WidthRequest="150" HeightRequest="100">
                        <Label Text="Tasks Completed: 34" TextColor="White" FontSize="16"/>
                    </Frame>
                </HorizontalStackLayout>

                <!-- Quick Action Buttons -->
                <HorizontalStackLayout Spacing="15">
                    <Button Text="Upload Data" BackgroundColor="#607D8B" TextColor="White" Clicked="UploadData_Clicked"/>
                    <Button Text="Generate Report" BackgroundColor="#607D8B" TextColor="White" Clicked="GenerateReport_Clicked"/>
                    <Button Text="Add Project" BackgroundColor="#607D8B" TextColor="White" Clicked="AddProject_Clicked"/>
                </HorizontalStackLayout>

                <!-- AI Alerts / Insights Section -->
                <Label Text="Recent Alerts &amp; AI Insights" FontSize="18" Margin="0,20,0,10"/>
                <VerticalStackLayout Spacing="10">
                    <Frame BackgroundColor="CornflowerBlue" Padding="10" Margin="0,0,500,0">
                        <Label Text="Project X may exceed budget by 10% — reallocate resources."/>
                    </Frame>
                    <Frame BackgroundColor="CornflowerBlue" Padding="10" Margin="0,0,500,0">
                        <Label Text="Client Y sales dropped 12% this month — review marketing strategy."/>
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>